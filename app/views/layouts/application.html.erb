<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%if flash[:errors]%>
      <% flash[:errors].each do |error| %>
        <%= error %>
      <% end %>
    <%elsif flash[:success].present?%>
      <%= flash[:success] %>
    <% end %>
    <%= yield %>
  </body>
</html>
